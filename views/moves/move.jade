tr.title
  td.condition
    a(href=move.url) #{move.condition}
  td.details
    .date=move.date_display
    .edit 
      a(href=move.edit_url, rel='nofollow') edit
    !=partial('controls', { object: move.meta })
  td.stat
    .roll +#{move.stat}
tr.def
  td.definition(colspan=3)!=move.definition_markdown
tr
  td(colspan=3).src
    - if (move.authors)
      .authors By: #{move.authors}
    - if (move.source)
      .source
        a(href=move.source) source
    - if (move.tags && move.tags.length > 0)
      .tags
        !=partial('tag', { collection: move.tags })